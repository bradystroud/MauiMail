<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ui="clr-namespace:MauiMail.UI"
             xmlns:components="clr-namespace:MauiMail.UI.Components"
             x:Class="MauiMail.UI.MainPage"
             x:DataType="ui:MainPage">
    
    <ListView ItemsSource="{Binding VisibleEmails}" RowHeight="100">
        <ListView.HeaderTemplate>
            <DataTemplate>
                <Label Text="{Binding MessagesCount, StringFormat='{0} Messages'}"></Label>
            </DataTemplate>
        </ListView.HeaderTemplate>
        <ListView.ItemTemplate>
            <DataTemplate>
                <components:EmailPreview />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    
</ContentPage>