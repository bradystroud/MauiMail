<?xml version="1.0" encoding="UTF-8"?>

<ViewCell
    x:Class="MauiMail.UI.Components.EmailPreview"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiMail"
    xmlns:classes="clr-namespace:MauiMail.UI.Classes"
    x:DataType="classes:Message">
    <SwipeView>
        <SwipeView.RightItems>
            <SwipeItems>
                <SwipeItem Text="Delete" BackgroundColor="Red" Clicked="Delete_OnClicked"/>
                <SwipeItem Text="Flag" BackgroundColor="Blue" />
            </SwipeItems>
        </SwipeView.RightItems>
        <Grid ColumnDefinitions="*,*" Margin="10,0,10,0" RowDefinitions="*,*,*">
            <Label x:Name="FromLabel" FontSize="20" Grid.Row="0" Grid.Column="0" Text="{Binding From}"
                   FontAttributes="Bold" />
            <Label x:Name="ArrivedLabel" Grid.Row="0" Grid.Column="1"
                   Text="{Binding Date, StringFormat='{0:dd MMMM yy}'}" HorizontalOptions="End" />
            <Label x:Name="SubjectLabel" Grid.Row="1" Text="{Binding Subject}" />
            <Label x:Name="BodyLabel" Grid.Row="2" Text="{Binding Body}" />
        </Grid>
    </SwipeView>
</ViewCell>